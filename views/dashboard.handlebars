<section>
  <h1>Create New Post</h1>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-body">Content</label>
       <textarea id="post-input" name="post-body"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>
{{#if posts.length}}
<section>
  <h1>Your Posts</h1>
  <div class="users-posts">
    {{#each posts}}
    <div class="user-post">
      <h2><a href="/post/{{id}}">{{title}}</a></h2>
      <p>{{comments.length}} comment(s)</p>
      <button id="edit-btn"><a href='/dashboard/edit/{{id}}'>edit</a></button>
    </div>
    {{/each}}
  </div>
</section>
{{/if}}
<script src="/javascript/add-post.js"></script>